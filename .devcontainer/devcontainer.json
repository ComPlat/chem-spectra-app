{
  "name": "ChemSpectraApp",
  "build": {
    "dockerfile": "Dockerfile.devcontainer",
    "args": {
      "USER_ID": "${localEnv:UID}",
      "USER_NAME": "${localEnv:USER}"
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    3007 // Port for the web server
  ],
  "onCreateCommand": "python -m venv ~/.venv && ~/.venv/bin/pip install --upgrade pip && ~/.venv/bin/pip install .",
  // Ensure the environment
  "postStartCommand": "~/.venv/bin/pip install --upgrade pip && ~/.venv/bin/pip install .",
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.autopep8",
        "ms-python.vscode-pylance",
        "github.vscode-github-actions"
      ],
      "settings": {
        "[python]": {
          "editor.defaultFormatter": "ms-python.autopep8",
          "terminal.activateEnvironment": true,
          "python.pythonPath": "~/.venv/bin/python"
        },
        "editor.formatOnSave": true
      }
    }
  }
}