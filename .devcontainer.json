{
  "name": "ChemSpectraApp",
  "image": "python:3.12-slim",
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    3007 // Port for the web server
  ],
  "updateContentCommand": "apt-get update && apt-get install -y python3-pip git libxrender1 libglib2.0-0 && apt-get clean && python3 -m venv .venv && .venv/bin/pip install --upgrade pip",
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": ".venv/bin/pip install .",
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.autopep8",
        "ms-python.vscode-pylance",
        "github.vscode-github-actions"
      ],
      "settings": {
        "[python]": {
          "editor.defaultFormatter": "ms-python.autopep8",
          "terminal.activateEnvironment": true,
          "python.defaultInterpreterPath": ".venv/bin/python"
        },
        "editor.formatOnSave": true
      }
    }
  },
  // Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "root"
}